<header>
    <div class="header-content">
        <div class="header-title"><%= locals[:header_title]%></div>
        <div class="header-user">
            <% if logged_in? %>
                <div class="user-name"><%= current_user.username%></div> 
                <% @users.each do |user| %>
                    <% if user.username == current_user.username %>
                        <% if user.avatar.attached? %>
                            <%= image_tag(user.avatar, alt: "user-avatar", class: "user-avatar mr-1") %>
                        <% else %>
                            <%= image_tag("guest_user.png", alt: "user-avatar", class: "user-avatar mr-1") %>
                        <% end %>
                    <% end %>
                <% end %>
    
                <a href="<%= logout_path%>">Logout</a>
            <% else %>
                <a href="<%= login_path%>">Login</a>
            <% end %>
        </div>
    </div>
</header>